<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.SplashScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:background="@drawable/homepage_container"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_marginTop="40dp"

                android:layout_gravity="center"
                android:background="@drawable/fm_icon_bg_white"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="23dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/bluedark"
                android:text="@string/app_name"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="90dp"
                android:gravity="center"
                android:text="Periksa dan Lapor Kesehatan Unit Kendaraan Kerja Secara Online"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12dp"
                android:layout_weight="1"
                android:gravity="center|bottom"

                android:text="@string/app_version"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>