<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/id_parent_activity_informasi_unit"
    tools:context=".ui.view.FormLaporP2HActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:backgroundTint="@color/white"
        app:cardCornerRadius="0dp"
        android:id="@+id/navbar"
        app:cardElevation="50dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:weightSum="3">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbPrevForm1"
                android:layout_weight="0.7"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:iconSize="35dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginStart="5dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/white"
                app:iconTint="@color/bluedark"
                app:icon="@drawable/baseline_arrow_back_24"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1.7"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/titleGan"
                    android:text="Lapor P2H Harian Unit"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/bluedark"
                    android:textSize="14dp"

                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_italic"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:text="Page Informasi Unit (1 / 1)"
                    android:layout_weight="1"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/ivSignLocation"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="10dp"
                app:tint="@color/colorRed"
                android:src="@drawable/location"
                />

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/navbar"
        android:background="@color/bluedark"
        android:elevation="5dp"
        android:id="@+id/formTitle"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Form Pengisian Informasi Unit"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:textSize="15dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/row_first_form"
        app:layout_constraintTop_toBottomOf="@id/formTitle"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tanggal Periksa"

                android:fontFamily="@font/poppins_medium"
android:textColor="@color/black"
                android:textSize="14dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sdaf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextInputLayout"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:hintTextColor="@color/bluedark"
                android:layout_weight="0.5"

                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTanggalPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@color/graylight"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jenis Unit"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="14dp"/>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                android:ems="10"
                android:textSize="10dp"
                android:hint="Pilih Jenis Unit"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:endIconMode="dropdown_menu"
                app:hintTextColor="@color/bluedark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/etJenisUnit"
                    android:layout_width="match_parent"
                    android:inputType="none"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"/>
<!--                <com.google.android.material.textfield.TextInputEditText-->

<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/poppins_regular"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:textSize="10dp" />-->

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/row_first_form"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/row_second_form"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Unit Kerja"
android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                android:ems="10"
                android:hint="Pilih Unit Kerja"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:endIconMode="dropdown_menu"
                app:hintTextColor="@color/bluedark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/etUnitKerja"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:inputType="none"

                    android:layout_height="wrap_content"/>
                <!--                <com.google.android.material.textfield.TextInputEditText-->

                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/poppins_regular"-->
                <!--                    android:inputType="textPersonName"-->
                <!--                    android:textSize="10dp" />-->

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kode Unit"
                android:fontFamily="@font/poppins_medium"
android:textColor="@color/black"
                android:textSize="14dp"/>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                android:ems="10"
                android:hint="Pilih Asal Aset"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:endIconMode="dropdown_menu"
                app:hintTextColor="@color/bluedark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/etKodeUnit"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:inputType="none"

                    android:layout_height="wrap_content"/>
                <!--                <com.google.android.material.textfield.TextInputEditText-->

                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/poppins_regular"-->
                <!--                    android:inputType="textPersonName"-->
                <!--                    android:textSize="10dp" />-->

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/row_second_form"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/row_third_form"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Type Unit"
android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextInputLayout"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:hintTextColor="@color/bluedark"
                android:layout_weight="0.5"

                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTypeUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nama Operator"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/row_second_form"
                android:textSize="11dp"/>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Masukkan Nama Operator"
                app:boxStrokeColor="@color/bluedark"
                app:cursorColor="@color/bluedark"
                app:hintTextColor="@color/bluedark"
                android:layout_weight="0.5"

                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNamaOperator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textPersonName"
                    android:textSize="10dp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/row_third_form"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/fotoUnitContainer"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/id_layout_foto_unit"
            layout="@layout/layout_foto_unit"
            android:visibility="visible"
            android:layout_width="match_parent"

            android:layout_height="match_parent" />
    </LinearLayout>





    <com.google.android.material.button.MaterialButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:text="Mulai"
        android:textSize="16dp"
        android:layout_gravity="end"
        android:fontFamily="@font/poppins_semibold"
        app:backgroundTint="@color/bluedark"
        android:id="@+id/mbNextForm0"
        app:cornerRadius="10dp"
        app:elevation="10dp"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>