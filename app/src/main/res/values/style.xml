<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="CustomDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:dropDownHeight">150dp</item> <!-- Adjust height as needed -->
        <item name="android:dropDownVerticalOffset">8dp</item> <!-- Offset to ensure the dropdown is visible below the TextInputLayout -->
    </style>
</resources>